{
  "name": "dev-jr",
  "version": "0.1.0",
  "homepage": "https://devv-jr.github.io/dev-jr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devv-jr/dev-jr.git"
  },
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "predeploy": "rm -rf out && next build && touch out/.nojekyll",
    "deploy": "npm run predeploy && gh-pages -d out --dotfiles",
    "deploy-clean": "gh-pages-clean && npm run deploy"
  },
  "dependencies": {
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "gh-pages": "^5.0.0",
    "tailwindcss": "^4",
    "@tailwindcss/postcss": "^4"
  }
}
